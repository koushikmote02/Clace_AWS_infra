# =============================================================================
# Terraform Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# Then run: source .env
# =============================================================================

# -----------------------------------------------------------------------------
# Project Configuration
# -----------------------------------------------------------------------------
export TF_VAR_project_name="clace"
export TF_VAR_environment="dev"
export TF_VAR_region="us-east-1"

# -----------------------------------------------------------------------------
# AWS ACM Certificate (required for HTTPS)
# Get this from AWS Certificate Manager after creating/importing a certificate
# -----------------------------------------------------------------------------
export TF_VAR_certificate_arn="arn:aws:acm:us-east-1:ACCOUNT_ID:certificate/CERTIFICATE_ID"

# -----------------------------------------------------------------------------
# Supabase Configuration
# Get these from your Supabase project settings
# -----------------------------------------------------------------------------
export TF_VAR_supabase_url="https://YOUR_PROJECT.supabase.co"
export TF_VAR_supabase_anon_key="your-supabase-anon-key"
export TF_VAR_supabase_service_role_key="your-supabase-service-role-key"

# -----------------------------------------------------------------------------
# AI API Keys
# -----------------------------------------------------------------------------
export TF_VAR_openai_api_key="sk-your-openai-api-key"
export TF_VAR_gemini_api_key="your-gemini-api-key"

# -----------------------------------------------------------------------------
# Stripe Configuration
# Get these from Stripe Dashboard > Developers > API keys
# -----------------------------------------------------------------------------
export TF_VAR_stripe_secret_key="sk_test_your-stripe-secret-key"
export TF_VAR_stripe_webhook_secret="whsec_your-webhook-secret"

# -----------------------------------------------------------------------------
# Search API
# -----------------------------------------------------------------------------
export TF_VAR_brave_search_api_key="your-brave-search-api-key"
